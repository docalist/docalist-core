{
    "type": "wordpress-plugin",
    "name": "docalist/docalist-core",
    "description": "Docalist : socle de base.",
    "homepage" : "https://docalist.org/",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Daniel MÃ©nard",
            "email": "daniel.menard.35@gmail.com",
            "homepage" : "https://docalist.org/"
        }
    ],
    "keywords" : [
        "docalist"
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "composer/installers": "^1.0 || ^2.0",
        "monolog/monolog": "^3.4",
        "psr/container": "^2.0",
        "symfony/http-foundation": "^7.2"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3",
        "rector/rector": "^0.18.10",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Docalist\\": "class/"
        },
        "files": ["bootstrap.php", "docalist.php", "docalist-functions.php"]
    },
    "autoload-dev" : {
        "psr-4" : {
            "Docalist\\Tests\\" : "tests/Docalist"
        }
    },
    "config" : {
        "sort-packages" : true,
        "optimize-autoloader" : true,
        "classmap-authoritative" : true,
        "allow-plugins": {
            "composer/installers": true,
            "phpstan/extension-installer": true,
            "johnpbloch/wordpress-core-installer": true
        }
    },
    "minimum-stability": "stable"
}
